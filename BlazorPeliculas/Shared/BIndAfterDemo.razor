<h3>BIndAfterDemo</h3>

<input type="type" @bind="busqueda" @bind:after="Buscar" />

<p>Personas encontradas:</p>

<ul>
    @foreach (var persona in personaEncontradas)
    {
        <li>@persona</li>
    }
</ul>


@code {
    private string busqueda = string.Empty;
    private List<string> personaEncontradas = new List<string>();

    private async Task Buscar()
    {
        var personas = new List<string>
        {
            "Felipe Gavilán",
            "Felipe Díaz",
            "Claudia Rodríguez",
            "Claudia Celeste",
            "Carlos",
            "Cecilia"
        };

        await Task.Delay(1000);

        personaEncontradas = personas.Where(p => p.Contains(busqueda)).ToList();
    }
}
